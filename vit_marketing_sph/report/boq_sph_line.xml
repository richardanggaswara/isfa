<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_vit_boq_sph_line_menu" string="Vit - Boq sph line"
         model="vit.boq_sph_line" report_type="qweb-pdf" 
         file="vit.boq_sph_line"  name="vit_marketing_sph.vit_boq_sph_line_report" />

        <!-- document template -->
        <template id="vit_marketing_sph.vit_boq_sph_line_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Boq sph line: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Qty</strong>
                            <p class="m-0" t-field="doc.qty" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Unit price</strong>
                            <p class="m-0" t-field="doc.unit_price" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Total</strong>
                            <p class="m-0" t-field="doc.total" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Unit weight sph</strong>
                            <p class="m-0" t-field="doc.unit_weight_sph" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Total weight sph</strong>
                            <p class="m-0" t-field="doc.total_weight_sph" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Uom</strong>
                            <p class="m-0" t-field="doc.uom_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sph</strong>
                            <p class="m-0" t-field="doc.sph_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Product</strong>
                            <p class="m-0" t-field="doc.product_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_marketing_sph.vit_boq_sph_line_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_marketing_sph.vit_boq_sph_line_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>