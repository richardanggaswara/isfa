<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_term_sph_line_tree" model="ir.ui.view">
            <field name="name">vit_term_sph_line_tree</field>
            <field name="model">vit.term_sph_line</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Term sph line">
                    <field name="name" />
                    <field name="persen" />
                    <field name="description_term" />
                    <field name="sph_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_term_sph_line_form" model="ir.ui.view">
            <field name="name">vit_term_sph_line_form</field>
            <field name="model">vit.term_sph_line</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Term sph line">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Term sph line Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="persen" />
                                <field name="description_term" />
                            </group>
                            <group>
                                <field name="sph_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_term_sph_line_search" model="ir.ui.view">
            <field name="name">vit_term_sph_line</field>
            <field name="model">vit.term_sph_line</field>
            <field name="arch" type="xml">
                <search string="Term sph line">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Persen" name="filter_by_persen" domain="[('persen','=','')]" />
                    <filter string="Description term" name="filter_by_description_term" domain="[('description_term','=','')]" />
                    <field name="name" select="True"/>
                    <field name="persen" select="True"/>
                    <field name="description_term" select="True"/>
                    <field name="sph_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Sph" domain="[]" name="group_by_sph_id" context="{'group_by':'sph_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_term_sph_line_kanban" model="ir.ui.view" >
            <field name="name">vit_term_sph_line</field>
            <field name="model">vit.term_sph_line</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="persen" />
                    <field name="description_term" />
                    <field name="sph_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_vit_term_sph_line_graph" model="ir.ui.view">
            <field name="name">vit_term_sph_line</field>
            <field name="model">vit.term_sph_line</field>
            <field name="arch" type="xml">
                <graph string="Term sph line" type="bar">
                    <field name="sph_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_vit_term_sph_line" model="ir.actions.act_window">
            <field name="name">Term sph line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.term_sph_line</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Term sph line
                </p><p>
                Click the Create button to add a new Term sph line
                </p>
            </field>
        </record>

        <menuitem id="menu_vit_term_sph_line" name="Term sph line" parent="vit_marketing_sph_sub_menu" action="action_vit_term_sph_line" sequence="20"/>
    </data>
</odoo>