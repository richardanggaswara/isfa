<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- report qweb view -->
		<report id="report_vit_marketing_jo_menu" string="Vit - Jo"
		 model="vit.marketing_jo" report_type="qweb-pdf" 
		 file="vit.marketing_jo"  name="vit_accounting_tpb.vit_marketing_jo_report" />

		<!-- document template -->
		<template id="vit_accounting_tpb.vit_marketing_jo_report_document" >
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
				<div class="page">
					<h2>
						Jo: <span t-field="doc.name"/>
					</h2>
					<div class="row mt32 mb32">
					</div>
				</div>
				<div class="oe_structure"/>
			</t>
		</template>

		<!-- main template -->
		<template id="vit_accounting_tpb.vit_marketing_jo_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.create_uid.lang"/>
					<t t-call="vit_accounting_tpb.vit_marketing_jo_report_document" />
				</t>
			</t>
		</template>

	</data>
</odoo>